extends base

block header
  - with headerMessage='Training 4 - Multi-Marking Mode'
    include includes/header


block content
  #Training4Modal(tabindex="-1", role="dialog", aria-labelledby="myModalLabel", aria-hidden="true").modal.fade
    .modal-dialog
      .modal-content
        .modal-body
          p.lead Instead of reading the same abstract three times and marking a different concept each time, you can use color coding to mark 3 different concepts all at once
          .panel.panel-info
            .panel-body
              h3.text-xs-center In this tutorial, you will learn about:
              ul.list-unstyled.list-inline.text-xs-center
                li
                  ul.list-unstyled
                    li Changing the color of the “marker”
                    li Feedback and scoring
                    li Machine-based pre-population
        .modal-footer
          button(type="button", data-dismiss="modal").btn.btn-default Close
  .container
    .row.m-t-1
      .col-md-12
        block step-instructions

    #partner(style='display: none;').row.m-t-1
      .row
        .col-md-4.col-md-offset-4
          .alert.alert-success
            h2.text-xs-center Good job!

    .row
      #quest-alerts.col-md-10.col-md-offset-1
      #quest.col-md-10.col-md-offset-1
        #paragraphs

    block highlightkey
      .row
        .col-xs-3.col-xs-offset-1.m-t-1
          #concept-type-instruction-link-list.list-group
            a(href='{% url "instructions:entity-recognition-diseases" %}', target='_blank').list-group-item.disease-concept-bg
              | Disease Concept  <i class="fa fa-external-link fa-lg"></i>

            a(href='{% url "instructions:entity-recognition-genes" %}', target='_blank').list-group-item.gene-concept-bg
              | Genes Concept  <i class="fa fa-external-link fa-lg"></i>

            a(href='{% url "instructions:entity-recognition-treatments" %}', target='_blank').list-group-item.treatment-concept-bg
              | Treatments Concept  <i class="fa fa-external-link fa-lg"></i>

    .row.m-t-1
      .col-md-8.col-md-offset-2
        .progress
          block progress
      .col-md-8.col-md-offset-2
        #next-container.pull-right
          block next-link


block post-footer
  block ypet
