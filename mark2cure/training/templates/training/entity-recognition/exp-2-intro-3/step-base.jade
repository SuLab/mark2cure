extends base

block header
  - with headerMessage='Training 3 â€“ Learning a new concept: Treatments'
    include includes/header


block content
  #Training3Modal(tabindex="-1", role="dialog", aria-labelledby="myModalLabel", aria-hidden="true").modal.fade
    .modal-dialog
      .modal-content
        .modal-header
          p.lead.text-xs-center A <strong>treatment</strong> is an attempt to cure or alleviate a disease or the symptoms of a disease. <strong>Do NOT mark Diseases or Genes Concept terms</strong> in this tutorial

        .modal-body
          .card
            .card-header
              h3.text-xs-center Acquire the Treatment Marking Skill by learning the Treatments Concept.

            .card-block
              p.text-xs-center The Treatments Concept includes:
              ul.list-unstyled.list-inline.text-xs-center
                li.list-inline-item
                  ul.list-unstyled
                    li Drugs
                    li Drug Classes
                    li Non-Drug Treatments

        .modal-footer
          button(type="button", data-dismiss="modal").btn.btn-primary Close

  .container
    .row.m-t-1
      .col-md-12
        block step-instructions

    #partner(style='display: none;').row.m-t-1
      .row
        .col-md-4.col-md-offset-4
          .alert.alert-success
            h2.text-xs-center Good job!

    .row.m-t-1
      #quest-alerts.col-md-10.col-md-offset-1
      #quest.col-md-10.col-md-offset-1.paragraph-box
        block paragraph

    .row.m-t-1
      .col-md-8.col-md-offset-2
        .progress
          block progress

      .col-md-8.col-md-offset-2
        #next-container.pull-right
          block next-link


block post-footer
  include training/entity-recognition/includes/intro-1-js

  block answers

  script.
      var validation_check = function(collection) {
        if(validate(collection, answers)) { correct(); }
      };
      YPet.AnnotationTypes = new AnnotationTypeList([{name: 'Treatments', color: '#ffd1dc'}]);
