  script.

    function show_astro_popup() {
      $el = $('#c2');
      $el.popover('hide');
      $el.popover({
        container: 'body',
        html: true,
        animation: false,
        content: function() {
          return 'Astrology is NOT actually a field of science.<br /> <strong>Click the <i class="fa fa-times-circle"></i> to report the error</strong>';
        },
        placement: 'top'
      });
      $el.popover('show');
    };

    show_astro_popup();

    Tree['convoChannel'].on('back', function() {
        $('#next-button').hide();
        $('#next-button').popover('dispose');
        show_astro_popup();
    });

    /* (TODO) work for incorrects
    * When an item is selected */
    Tree['convoChannel'].on('click', function(obj) {
      var current_selection = Tree.start.currentView.options.choice;
      if(current_selection.get('id') == 'RdKIrcaEOnM4DRk25g5jAfeNC6HSpsFZaiIPqZer') {
        $('#next-button').show();
      } else {
        $('#next-button').hide();
        $('#next-button').popover('dispose');
        show_astro_popup();
      }
    });

    var passages, regions, tmp_passages;

    /* When an item is selected */
    Tree['convoChannel'].on('error', function(str) {
      if(str == 'c_2') {
        $('#next-button').show();

        $('.popover').popover('dispose');
        $next_el = $('#next-button');
        $next_el.popover('hide');
        $next_el.popover({
          container: 'body',
          html: true,
          animation: false,
          content: function() {
            return 'Click submit to confirm that you are reporting an error';
          },
          placement: 'right'
        });
        $next_el.popover('show');

      };
    });

