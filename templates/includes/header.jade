- load humanize

nav#header(role='navigation').navbar.navbar-default
  div.container
    .row.justify-content-between
      .col-2
        a.navbar-brand(href='{% url "common:dashboard" %}')
          img(src="#{STATIC_URL}images/landing/mark2cure-flatbox-logo.png", alt="Mark2Cure")

      .col-8
        h1.text-center #{headerMessage}

      .col-2
        - if user.is_authenticated
            a(href='{% url "profile:public-profile" username=user.username %}').box-outline.text-right
              p.m-0 {{user}}

