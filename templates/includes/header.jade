- load humanize

nav#header-auth-generic(role='navigation').navbar.navbar-default
  div.container
    .row
      .col-md-3.col-md-offset-0.hidden-md-down
        div.navbar-header
          a.navbar-brand(href='{% url "common:dashboard" %}')
            img(src="#{STATIC_URL}images/landing/mark2cure-flatbox-logo.png", alt="Mark2Cure")

      .col-xs-10.col-xs-offset-1.col-md-6.col-md-offset-0
        h2.text-center #{headerMessage}

      .col-xs-10.col-xs-offset-1.col-sm-6.col-sm-offset-3.col-md-3.col-md-offset-0
        #site-nav.collapse.navbar-toggleable-xs
          .row
            .col-xs-6.col-sm-7
              ul.list-unstyled.user-info
                li
                  p {{user}}

            .col-xs-6.col-sm-5
              ul.list-unstyled.site-links
                li
                  a(href='{% url "talk:recent" %}')
                    p Talk Pages
                li
                  a(href='{% url "profile:public-profile" username=user.username %}')
                    p Profile

    .row
      .col-xs-10.col-xs-offset-1
        button#expand-content(data-toggle='collapse', data-target='#site-nav').btn-block.navbar-toggler.hidden-sm-up
          h4 EXPAND
