extends flatpages/base

- load as_vertical_form from bootstrap

block content

  .container
    .row.m-t-1
      .col-xs-12
        h2.text-xs-center Login
        p.text-xs-center Don't have account? <a href='{% url "common:get-started" %}'>Get started now!</a>

    .row.m-t-1
      .col-xs-10.col-xs-offset-1
        - if form.errors
          p Your username and password didn't match. Please try again.

      .col-xs-10.col-xs-offset-1
        form(method='post')
          - csrf_token

          .form-group
            .row
              .col-xs-12.col-md-6.col-md-offset-3
                #{form.login|as_vertical_form}

          .form-group
            .row
              .col-xs-12.col-md-6.col-md-offset-3
                #{form.password|as_vertical_form}

          .form-group.m-t-1
            .row
              .col-xs-12.col-md-4.col-md-offset-4
                input(type='submit', value='Login').btn.btn-primary.btn-block

              .col-xs-12.col-md-4.col-md-offset-4.m-t-1
                p.text-right
                  small
                    a(href='{% url "account_reset_password" %}') Forgot password?
